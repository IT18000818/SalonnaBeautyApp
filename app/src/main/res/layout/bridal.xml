<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bridal">

    <Button
        android:id="@+id/radioplatinum"
        android:layout_width="180dp"
        android:layout_height="340dp"
        android:background="@drawable/platinum"
        app:layout_constraintBottom_toTopOf="@+id/radiosilver"
        app:layout_constraintEnd_toStartOf="@+id/radiogold"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <Button
        android:id="@+id/radiogold"
        android:layout_width="180dp"
        android:layout_height="340dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/gold"
        app:layout_constraintBottom_toTopOf="@+id/radiobronze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <Button
        android:id="@+id/radiosilver"
        android:layout_width="180dp"
        android:layout_height="340dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/silver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radiobronze"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/radiobronze"
        android:layout_width="180dp"
        android:layout_height="340dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bronze"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>